{
  "manifest_version": 3,
  "name": "Gmail Email Fetcher",
  "version": "1.0",
  "description": "A Chrome extension to fetch emails from Gmail.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["identity", "identity.email", "background", "storage"],
  "oauth2": {
    "client_id": "801952120012-u2u1kc0s06d5mseoli7e07q7o8b0intp.apps.googleusercontent.com",
    "scopes": ["https://mail.google.com/"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Gmail Manager",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "https://www.googleapis.com/",
    "https://mail.google.com/"
  ]
}
